<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\..\..\build\common.props" />

  <PropertyGroup>
    <TargetFramework>net461</TargetFramework>
    <PreserveCompilationContext>true</PreserveCompilationContext>
    <OutputType>Exe</OutputType>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="Certificate.pfx" />

    <None Update="Content\**\*;Views\**\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\src\Owin.Security.OpenIdConnect.Server\Owin.Security.OpenIdConnect.Server.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="EntityFramework" Version="$(EntityFrameworkVersion)" />
    <PackageReference Include="Microsoft.AspNet.Razor" Version="$(RazorVersion)" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="$(AspNetCoreVersion)" />
    <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="$(AspNetCoreVersion)" />
    <PackageReference Include="Microsoft.Owin.Security.Cookies" Version="$(OwinVersion)" />
    <PackageReference Include="Microsoft.Owin.Security.Jwt" Version="$(OwinVersion)" />
    <PackageReference Include="Microsoft.Owin.Security.OAuth" Version="$(OwinVersion)" />
    <PackageReference Include="Microsoft.Owin.SelfHost" Version="$(OwinVersion)" />
    <PackageReference Include="Nancy.MSOwinSecurity" Version="$(NancyOwinSecurityVersion)" />
    <PackageReference Include="Nancy.Owin" Version="$(NancyOwinVersion)" />
    <PackageReference Include="Nancy.Viewengines.Razor" Version="$(NancyRazorVersion)" />
    <PackageReference Include="Owin.Security.OAuth.Introspection" Version="$(AspNetContribOpenIdExtensionsVersion)" />
    <PackageReference Include="Owin.Security.OAuth.Validation" Version="$(AspNetContribOpenIdExtensionsVersion)" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.IdentityModel" />
  </ItemGroup>

</Project>
